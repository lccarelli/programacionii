                <!-- Campo Contenido -->
                <HBox spacing="8" alignment="TOP_LEFT" maxWidth="460">
                    <Label text="Contenido:"
                           styleClass="field-label"/>
                    <TextArea fx:id="txtContenido"
                              promptText="Escriba aquÃ­ el contenido de la nota"
                              prefRowCount="5"
