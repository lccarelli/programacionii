            fx:controller="main.Controller"
            prefWidth="720.0" prefHeight="400.0"
            stylesheets="@view.css">

    <center>
        <HBox spacing="20">
            <padding>
                <Insets top="18" right="24" bottom="18" left="24"/>
            </padding>

            <!-- Columna izquierda: formulario -->
            <VBox alignment="TOP_CENTER" spacing="14">
